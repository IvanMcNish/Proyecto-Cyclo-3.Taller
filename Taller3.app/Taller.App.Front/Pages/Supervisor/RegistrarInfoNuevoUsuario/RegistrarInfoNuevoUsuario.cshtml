             @* tabla de clientes *@
        <div id="tabla" class="responsive-border">
            <table id="testTable"
                class="table table-hover table-sm align-middle caption-top table-bordered border-primary">
                <thead class="bg-primary">
                    <tr>

                        <th scope="col">Número de Identificación</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Ciudad</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Fecha de Nacimiento</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">Correo Electronico</th>
                        <th scope="col">Gestion</th>

                    </tr>
                </thead>

                <tbody>
                        @foreach (var c in @Model.ListaCliente )
                        {

                           

                        <tr>
                            <td>@c.ClienteId</td>
                            <td>@c.Direccion</td>
                            <td>@c.Ciudad</td>
                            <td>@c.Nombre</td>
                            <td>@c.Telefono</td>
                            <td>@c.FechaNacimiento</td>
                            <td>@c.Contraseña</td>
                            <td>@c.Rol</td>
                            <td>
                                <i class="edi bi bi-pencil"></i>
                                <form method="POST">
                                    <button class="action" asp-page-handler="Delete"
                                    asp-route-ClienteId="@c.ClienteId">Eliminar</button>
                                </form>
                            </td>

                        </tr>

                        }
                </tbody>
            </table>


