                                    <input type="text" class="form-control" id="validationCustom02" name="ClienteId"required>
                                    <div class="invalid-feedback">
                                        Campo requerido
                                    </div>
                                </div>
                            </div>
                            <br>
                            <br>
                            <div class="row">
                                <div class="col">
                                    <label for="validationCustom06" class="form-label">Nombre Completo</label>
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" name="Nombre" id="validationCustom05"
                                        required>
                                    <div class="invalid-feedback">
                                        Campo requerido
                                    </div>
                                </div>
                            </div>

                            <br>
                            <br>
                            <div class="row">
                                <div class="col">
                                    <label for="validationCustom05" class="form-label">Fecha de Nacimiento:</label>
